<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>${groupId}</groupId>
    <artifactId>shared-pom</artifactId>
    <version>${version}</version>
    <packaging>pom</packaging>

    <properties>

        <main.basedir>${project.basedir}/../../..</main.basedir>
        <!--<main.outputDirectory>${main.basedir}/target/${apiproxy.name}</main.outputDirectory>-->

        <encoding>UTF-8</encoding>
        <java.version>1.8</java.version>

        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>

        <project.build.sourceEncoding>${encoding}</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${encoding}</project.reporting.outputEncoding>

        <deployment.suffix>-${user.name}</deployment.suffix>

        <apigee.username>${env.APIGEE_USERNAME}</apigee.username>
        <apigee.password>${env.APIGEE_PASSWORD}</apigee.password>
        <apigee.apitype>apiproxy</apigee.apitype>

        <yaml.properties.maven.plugin.version>1.1.2</yaml.properties.maven.plugin.version>
        <exec.maven.plugin.version>1.6.0</exec.maven.plugin.version>
        <iad.j2y2j.converter.maven.plugin.version>1.0</iad.j2y2j.converter.maven.plugin.version>
        <iad.json.properties.maven.plugin.version>1.1</iad.json.properties.maven.plugin.version>
        <maven.resources.plugin.version>2.6</maven.resources.plugin.version>
        <apigee.edge.maven.plugin.version>1.1.5</apigee.edge.maven.plugin.version>
        <apigee.config.maven.plugin.version>1.2</apigee.config.maven.plugin.version>
        <groovy.all.version>2.5.6</groovy.all.version>
        <jshint-maven-plugin.version>1.6.0</jshint-maven-plugin.version>
        <exec-maven-plugin.version>1.3.2</exec-maven-plugin.version>
    </properties>

    <profiles>
        <profile>
            <id>test</id>
            <properties>
                <apigee.profile>test</apigee.profile>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <apigee.profile>prod</apigee.profile>
            </properties>
        </profile>
    </profiles>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <name>Maven Plugin Repository</name>
            <url>http://repo1.maven.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <!--<plugin>-->
                <!--<artifactId>maven-clean-plugin</artifactId>-->
                <!--<version>2.5</version>-->
                <!--<executions>-->
                    <!--<execution>-->
                        <!--<id>auto-clean-init</id>-->
                        <!--<phase>validate</phase>-->
                        <!--<goals>-->
                            <!--<goal>clean</goal>-->
                        <!--</goals>-->
                        <!--<configuration>-->
                            <!--<filesets>-->
                                <!--<fileset>-->
                                    <!--<directory>${main.outputDirectory}</directory>-->
                                    <!--<includes>-->
                                        <!--<include>**</include>-->
                                    <!--</includes>-->
                                    <!--<followSymlinks>false</followSymlinks>-->
                                <!--</fileset>-->
                            <!--</filesets>-->
                        <!--</configuration>-->
                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->

            <plugin>
                <groupId>it.ozimov</groupId>
                <artifactId>yaml-properties-maven-plugin</artifactId>
                <version>${yaml.properties.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>read-global-properties</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${main.basedir}/config/config.yaml</file>
                                <file>${main.basedir}/config/profile-${apigee.profile}.yaml</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <version>1.6.2</version>
                <executions>
                    <execution>
                        <id>compute-next-revision</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>compile</goal>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <scripts>
                                <script>${main.basedir}/build-utils/revisions.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-all</artifactId>
                        <version>${groovy.all.version}</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>com.github.iarellano</groupId>
                <artifactId>iad-j2y2j-converter-maven-plugin</artifactId>
                <version>${iad.j2y2j.converter.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-edge-configs</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>yaml-2-json</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/edge</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>api/**/*.yaml</include>
                                        <include>env/${apigee.env}/*.yaml</include>
                                        <include>org/*.yaml</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/edge</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-apiproxy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>apiproxy/**/*.*</include>
                                        <include>test/**/*.*</include>
                                        <include>edge/**/*.*</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-apiproxy-unit-test-support-files</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${main.basedir}/src/test/gateway/unit</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/*.*</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/test/unit/common</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- run jslint -->
            <plugin>
                <groupId>com.cj.jshintmojo</groupId>
                <artifactId>jshint-maven-plugin</artifactId>
                <version>${jshint-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>jslint</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>lint</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <version>2.4.3</version>
                    <options>indent,camelcase,curly,eqeqeq,forin,immed,latedef,undef,noempty,nonew,unused,noarg</options>
                    <directories>
                        <directory>${project.build.directory}/apiproxy/resources/jsc</directory>
                    </directories>
                    <reporter>jslint</reporter>
                    <failOnError>true</failOnError>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>
                <executions>
                    <!-- npm install -->
                    <execution>
                        <id>npm-install</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                install
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- run apigeelint -->
                    <execution>
                        <id>run-apigeelint</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./node_modules/apigeelint/cli.js -s ${project.build.directory}/apiproxy -w ${project.build.directory}/test/
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- propagate apigeelint errors -->
                    <execution>
                        <id>propagate-apigeelint-errors</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./build-utils/apigeelint.js -f ${project.build.directory}/test/apigeeLint.json -c ${apigeelint.threshold}
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- run unit tests -->
                    <execution>
                        <id>run-javascript-unit-testing</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./node_modules/mocha/bin/mocha ${project.build.directory}/test/unit
                            </commandlineArgs>
                            <!--<skip>${apigee.skipTests}</skip>-->
                        </configuration>
                    </execution>

                    <!--&lt;!&ndash; run integration tests &ndash;&gt;-->
                    <!--<execution>-->
                    <!--<id>integration</id>-->
                    <!--<phase>install</phase>-->
                    <!--<goals>-->
                    <!--<goal>exec</goal>-->
                    <!--</goals>-->
                    <!--<configuration>-->
                    <!--<executable>node</executable>-->
                    <!--<commandlineArgs>-->
                    <!--./node_modules/cucumber/bin/cucumber.js target/test/integration/features &#45;&#45;tags-->
                    <!--${api.testtag}-->
                    <!--</commandlineArgs>-->
                    <!--<skip>${apigee.skipTests}</skip>-->
                    <!--</configuration>-->
                    <!--</execution>-->

                </executions>
            </plugin>

            <plugin>
                <groupId>io.apigee.build-tools.enterprise4g</groupId>
                <artifactId>apigee-edge-maven-plugin</artifactId>
                <version>1.1.5</version>
                <executions>
                    <execution>
                        <id>configure-bundle-step</id>
                        <phase>package</phase>
                        <goals>
                            <goal>configure</goal>
                        </goals>
                    </execution>
                    <!--deploy bundle -->
                    <execution>
                        <id>deploy-bundle-step</id>
                        <phase>install</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>