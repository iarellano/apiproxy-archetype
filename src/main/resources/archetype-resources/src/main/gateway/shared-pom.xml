<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>${groupId}</groupId>
    <artifactId>shared-pom</artifactId>
    <version>${version}</version>
    <packaging>pom</packaging>

    <properties>

        <main.basedir>${project.basedir}/../../..</main.basedir>
        <apiproxy.basedir>${project.basedir}</apiproxy.basedir>
        <deployment.suffix>-${user.name}</deployment.suffix>
        <!--
            apiproxy.canonicalName = ${apiproxy.name}${deployment.suffix}-rev${apiproxy.revision}
            such value is generated by build-utils/revisions.groovy
         -->
        <apiproxy.canonicalName />

        <encoding>UTF-8</encoding>
        <java.version>1.8</java.version>

        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>

        <project.build.sourceEncoding>${encoding}</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${encoding}</project.reporting.outputEncoding>

        <apigee.username>${env.APIGEE_USERNAME}</apigee.username>
        <apigee.password>${env.APIGEE_PASSWORD}</apigee.password>

        <deployProfileActivated>false</deployProfileActivated>
        <yaml.properties.maven.plugin.version>1.1.2</yaml.properties.maven.plugin.version>
        <exec.maven.plugin.version>1.6.0</exec.maven.plugin.version>
        <iad.j2y2j.converter.maven.plugin.version>1.0</iad.j2y2j.converter.maven.plugin.version>
        <iad.json.properties.maven.plugin.version>1.1</iad.json.properties.maven.plugin.version>
        <maven.resources.plugin.version>2.6</maven.resources.plugin.version>
        <apigee.edge.maven.plugin.version>1.1.5</apigee.edge.maven.plugin.version>
        <apigee.config.maven.plugin.version>1.2</apigee.config.maven.plugin.version>
        <groovy.all.version>2.5.6</groovy.all.version>
        <jshint-maven-plugin.version>1.6.0</jshint-maven-plugin.version>
        <exec-maven-plugin.version>1.3.2</exec-maven-plugin.version>
        <apigee.config.dir>${project.build.directory}/edge</apigee.config.dir>
        <apigee.config.exportDir>${project.build.directory}</apigee.config.exportDir>
    </properties>

    <profiles>
        <profile>
            <id>test</id>
            <properties>
                <apigee.profile>test</apigee.profile>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <apigee.profile>prod</apigee.profile>
            </properties>
        </profile>
        <profile>
            <id>integration</id>
            <properties>
                <integrationProfileActivated>true</integrationProfileActivated>
                <apigee.config.options>update</apigee.config.options>
            </properties>
            <build>
                <plugins>
                    <!-- deploy apiproducts, developers, and developerApps -->
                    <plugin>
                        <groupId>com.apigee.edge.config</groupId>
                        <artifactId>apigee-config-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>
                            <execution>
                                <id>create-config-apiproduct</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>apiproducts</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>create-config-developer</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>developers</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>create-config-app</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>apps</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>export-api-keys</id>
                                <phase>generate-test-resources</phase>
                                <goals>
                                    <goal>exportAppKeys</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- run integration tests -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>${exec-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>run-integration-testing</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>node</executable>
                                    <commandlineArgs>
                                        ./node_modules/cucumber/bin/cucumber.js target/test/integration/features --tags ${api.testtag}
                                    </commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>deploy</id>
            <properties>
                <deployProfileActivated>true</deployProfileActivated>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.gmavenplus</groupId>
                        <artifactId>gmavenplus-plugin</artifactId>
                        <version>1.6.2</version>
                        <executions>
                            <execution>
                                <id>compute-next-revision</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <scripts>
                                        <script>${main.basedir}/build-utils/compute-next-revision.groovy</script>
                                    </scripts>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.codehaus.groovy</groupId>
                                <artifactId>groovy-all</artifactId>
                                <version>${groovy.all.version}</version>
                                <type>pom</type>
                            </dependency>
                        </dependencies>
                    </plugin>
                    <plugin>
                        <groupId>com.apigee.edge.config</groupId>
                        <artifactId>apigee-config-maven-plugin</artifactId>
                        <version>1.2</version>
                        <executions>
                            <execution>
                                <id>create-config-cache</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>caches</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>create-config-targetserver</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>targetservers</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>create-config-kvm</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>keyvaluemaps</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>create-config-resourcefiles</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>resourcefiles</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>io.apigee.build-tools.enterprise4g</groupId>
                        <artifactId>apigee-edge-maven-plugin</artifactId>
                        <version>1.1.6</version>
                        <executions>
                            <execution>
                                <id>configure-bundle</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>configure</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>deploy-bundle</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <name>Maven Plugin Repository</name>
            <url>http://repo1.maven.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <build>

        <plugins>
            <plugin>
                <groupId>it.ozimov</groupId>
                <artifactId>yaml-properties-maven-plugin</artifactId>
                <version>${yaml.properties.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>read-global-properties</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${main.basedir}/config/config.yaml</file>
                                <file>${main.basedir}/config/profile-${apigee.profile}.yaml</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.github.iarellano</groupId>
                <artifactId>iad-j2y2j-converter-maven-plugin</artifactId>
                <version>${iad.j2y2j.converter.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-edge-configs</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>yaml-2-json</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/edge</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>api/**/*.yaml</include>
                                        <include>env/${apigee.env}/*.yaml</include>
                                        <include>org/*.yaml</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/edge</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <version>1.6.2</version>
                <executions>
                    <execution>
                        <id>get-deployed-revision</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <scripts>
                                <script>${main.basedir}/build-utils/get-deployed-revision.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-all</artifactId>
                        <version>${groovy.all.version}</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-apiproxy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>apiproxy/**/*.*</include>
                                        <include>test/**/*.*</include>
                                        <include>edge/${apigee.env}/*.json</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-apiproxy-unit-test-support-files</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${main.basedir}/src/test/gateway/unit</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/*.*</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/test/unit/common</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- run jslint -->
            <plugin>
                <groupId>com.cj.jshintmojo</groupId>
                <artifactId>jshint-maven-plugin</artifactId>
                <version>${jshint-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>run-jshint</id>
                        <phase>test</phase>
                        <goals>
                            <goal>lint</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <version>2.4.3</version>
                    <options>indent,camelcase,curly,eqeqeq,forin,immed,latedef,undef,noempty,nonew,unused,noarg</options>
                    <directories>
                        <directory>${project.build.directory}/apiproxy/resources/jsc</directory>
                    </directories>
                    <reporter>jslint</reporter>
                    <failOnError>true</failOnError>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>
                <executions>
                    <!-- npm install -->
                    <execution>
                        <id>npm-install</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                install
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- run apigeelint -->
                    <execution>
                        <id>run-apigeelint</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./node_modules/apigeelint/cli.js -s ${project.build.directory}/apiproxy -w ${project.build.directory}/test/
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- propagate apigeelint errors -->
                    <execution>
                        <id>propagate-apigeelint-errors</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./build-utils/apigeelint.js -f ${project.build.directory}/test/apigeeLint.json -c ${apigeelint.threshold}
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- run unit tests -->
                    <execution>
                        <id>run-javascript-unit-testing</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./node_modules/mocha/bin/mocha ${project.build.directory}/test/unit
                            </commandlineArgs>
                            <!--<skip>${apigee.skipTests}</skip>-->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>