            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-apiproxy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/src/main</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>apiproxy/policies/**/*.xml</include>
                                        <include>apiproxy/proxies/**/*.xml</include>
                                        <include>apiproxy/targets/**/*.xml</include>
                                        <include>apiproxy/resources/jsc/*.*</include>
                                        <include>apiproxy/resources/node/*.*</include>
                                        <include>apiproxy/resources/hosted/*.*</include>
                                        <include>apiproxy/resources/xsd/*.*</include>
                                        <include>apiproxy/resources/xsl/*.*</include>
                                        <include>apiproxy/resources/wsdl/*.*</include>
                                        <include>apiproxy/*.xml</include>
                                    </includes>
                                    <excludes>
                                        <exclude>apiproxy/callout/**/*.*</exclude>
                                        <exclude>apiproxy/resources/java/**/*.*</exclude>
                                        <exclude>resources/edge/**/*.*</exclude>
                                    </excludes>
                                </resource>
                                <resource>
                                    <directory>src/main</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>apiproxy/resources/java/**/*.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

