                        <phase>process-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <scripts>
                                <script>${root.main.project}/revisions.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-all</artifactId>
                        <version>${groovy.all.version}</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>com.github.iarellano</groupId>
                <artifactId>iad-j2y2j-converter-maven-plugin</artifactId>
                <version>${iad.j2y2j.converter.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-edge-configs</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>yaml-2-json</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${root.main.project}/src/main/resources/edge</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>api/**/*.yaml</include>
                                        <include>env/${apigee.env}/*.yaml</include>
                                        <include>org/*.yaml</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.build.directory}/edge</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

