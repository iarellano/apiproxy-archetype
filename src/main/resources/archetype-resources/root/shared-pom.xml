            <!-- run jslint -->
            <plugin>
                <groupId>com.cj.jshintmojo</groupId>
                <artifactId>jshint-maven-plugin</artifactId>
                <version>${jshint-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <id>jslint</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>lint</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <version>2.4.3</version>
                    <options>indent,camelcase,curly,eqeqeq,forin,immed,latedef,undef,noempty,nonew,unused,noarg</options>
                    <directories>
                        <directory>../../../../target/${apiproxy.name}/apiproxy/resources/jsc</directory>
                    </directories>
                    <reporter>jslint</reporter>
                    <failOnError>true</failOnError>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${exec-maven-plugin.version}</version>
                <executions>
                    <!-- npm install -->
                    <execution>
                        <id>npm-install</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                install
                            </commandlineArgs>
                        </configuration>
                    </execution>
                    <!-- run apigeelint -->
                    <execution>
                        <id>run-apigeelint</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./node_modules/apigeelint/cli.js -s ${main.outputDirectory}/apiproxy -w ${main.outputDirectory}/test/
                            </commandlineArgs>
                        </configuration>
                    </execution>
                    <!-- propagate apigeelint errors -->
                    <execution>
                        <id>propagate-apigeelint-errors</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./apigeelint.js -f ${main.outputDirectory}/test/apigeeLint.json -c warningCount
                            </commandlineArgs>
                        </configuration>
                    </execution>

                    <!-- run unit tests -->
                    <execution>
                        <id>run-javascript-unit-testing</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>node</executable>
                            <workingDirectory>${main.basedir}</workingDirectory>
                            <commandlineArgs>
                                ./node_modules/mocha/bin/mocha ${main.outputDirectory}/test/unit/${apiproxy.name}
                            </commandlineArgs>
                            <!--<skip>${apigee.skipTests}</skip>-->
                        </configuration>
                    </execution>

