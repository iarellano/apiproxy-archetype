<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>${groupId}</groupId>
    <artifactId>shared-pom</artifactId>
    <version>${version}</version>
    <packaging>pom</packaging>

    <properties>

        <main.basedir>${project.basedir}</main.basedir>
        <main.outputDirectory>${main.basedir}/target/${apiproxy.name}</main.outputDirectory>

        <encoding>UTF-8</encoding>
        <java.version>1.8</java.version>

        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>

        <project.build.sourceEncoding>${encoding}</project.build.sourceEncoding>
        <project.reporting.outputEncoding>${encoding}</project.reporting.outputEncoding>

        <apigee.username>${env.APIGEE_USERNAME}</apigee.username>
        <apigee.password>${env.APIGEE_PASSWORD}</apigee.password>

        <yaml.properties.maven.plugin.version>1.1.2</yaml.properties.maven.plugin.version>
        <exec.maven.plugin.version>1.6.0</exec.maven.plugin.version>
        <iad.j2y2j.converter.maven.plugin.version>1.0</iad.j2y2j.converter.maven.plugin.version>
        <iad.json.properties.maven.plugin.version>1.1</iad.json.properties.maven.plugin.version>
        <maven.resources.plugin.version>2.6</maven.resources.plugin.version>
        <apigee.edge.maven.plugin.version>1.1.5</apigee.edge.maven.plugin.version>
        <apigee.config.maven.plugin.version>1.2</apigee.config.maven.plugin.version>
        <groovy.all.version>2.5.6</groovy.all.version>
        <jshint-maven-plugin.version>1.6.0</jshint-maven-plugin.version>
        <exec-maven-plugin.version>1.3.2</exec-maven-plugin.version>
    </properties>

    <profiles>
        <profile>
            <id>test</id>
            <properties>
                <apigee.profile>test</apigee.profile>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <properties>
                <apigee.profile>prod</apigee.profile>
            </properties>
        </profile>
    </profiles>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <name>Maven Plugin Repository</name>
            <url>http://repo1.maven.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>auto-clean-init</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${main.outputDirectory}</directory>
                                    <includes>
                                        <include>**</include>
                                    </includes>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>it.ozimov</groupId>
                <artifactId>yaml-properties-maven-plugin</artifactId>
                <version>${yaml.properties.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>read-global-properties</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${main.basedir}/config/config.yaml</file>
                                <file>${main.basedir}/config/profile-${apigee.profile}.yaml</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <version>1.6.2</version>
                <executions>
                    <execution>
                        <id>compute-next-revision</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>compile</goal>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <scripts>
                                <script>${main.basedir}/build-utils/revisions.groovy</script>
                            </scripts>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-all</artifactId>
                        <version>${groovy.all.version}</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>

            <plugin>
                <groupId>com.github.iarellano</groupId>
                <artifactId>iad-j2y2j-converter-maven-plugin</artifactId>
                <version>${iad.j2y2j.converter.maven.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-edge-configs</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>yaml-2-json</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/edge</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>api/**/*.yaml</include>
                                        <include>env/${apigee.env}/*.yaml</include>
                                        <include>org/*.yaml</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${main.outputDirectory}/edge</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin.version}</version>
                <executions>
                    <execution>
                        <id>copy-apiproxy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>apiproxy/**/*.*</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${main.outputDirectory}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-apiproxy-tests</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${main.basedir}/src/test/gateway</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>unit/common/**/*.*</include>
                                        <include>unit/${apiproxy.name}/**/*.*</include>
                                        <include>integration/**/*.*</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${main.basedir}/src/test/gateway</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>performance/${apiproxy.name}/**/*.*</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${main.outputDirectory}/test</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-apiproxy-tests-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <overwrite>true</overwrite>
                            <encoding>UTF-8</encoding>
                            <resources>
                                <resource>
                                    <directory>${main.basedir}/src/test/resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>edge/**/*.*</include>
                                    </includes>
                                </resource>
                            </resources>
                            <outputDirectory>${main.outputDirectory}/test</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

